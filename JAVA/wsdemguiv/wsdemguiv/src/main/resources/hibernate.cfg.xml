<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MariaDB10Dialect</property>
        <property name="hibernate.connection.driver_class">org.mariadb.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mariadb://localhost:3306/bd_demguiv</property>
        <property name="hibernate.connection.username">root</property>
        
        <property name="hbm2ddl.auto">create</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>
        <!--Mapping-->
        <mapping class="com.sio.wsdemguiv.entity.Dossier"/>
        <mapping class="com.sio.wsdemguiv.entity.FicheInstruction"/>
        <mapping class="com.sio.wsdemguiv.entity.Chargement"/>
        <mapping class="com.sio.wsdemguiv.entity.Livraison"/>
        <mapping class="com.sio.wsdemguiv.entity.VehiculeCharge"/>
        <mapping class="com.sio.wsdemguiv.entity.VehiculeDecharge"/>
        <mapping class="com.sio.wsdemguiv.entity.Vehicule"/>
    </session-factory>
</hibernate-configuration>
